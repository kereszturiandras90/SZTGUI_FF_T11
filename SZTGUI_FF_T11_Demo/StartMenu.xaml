<Window x:Class="SZTGUI_FF_T11_Demo.StartMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SZTGUI_FF_T11_Demo"
        xmlns:vm="clr-namespace:SZTGUI_FF_T11_Demo.VM"
        mc:Ignorable="d"
        Title="Start menü" Height="450" Width="520"
        ResizeMode="NoResize">
    <Window.Resources>
        <vm:MenuVM x:Key="VM" />
    </Window.Resources>
    
    <Grid DataContext="{StaticResource VM}">
        <Button Command="{Binding Path=NewGame}" Content="Új játék" HorizontalAlignment="Center" Margin="0,76,0,0" VerticalAlignment="Top" Height="49" Width="312" FontSize="16"/>
        <Button Command="{Binding Path=LoadGame}" Content="Játék betöltése" HorizontalAlignment="Center" Margin="0,153,0,0" VerticalAlignment="Top" Height="49" Width="312" FontSize="16"/>
        <Button Command="{Binding Path=GameResults}" Content="Dicsőségtábla" HorizontalAlignment="Center" VerticalAlignment="Top" Height="49" Width="312" Margin="0,232,0,0" FontSize="16"/>
        <Button Click="Exit_Click" Content="Kilépés" HorizontalAlignment="Center" VerticalAlignment="Top" Height="49" Width="312" Margin="0,314,0,0" FontSize="16"/>

    </Grid>
</Window>
